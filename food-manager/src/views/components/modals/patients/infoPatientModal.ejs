<div id="patientModal" class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center hidden">
    <div class="bg-white rounded-lg shadow-xl max-w-6xl w-full p-6 relative">
        <!-- Botón para cerrar el modal -->
        <button class="absolute top-2 right-2 text-gray-500 hover:text-gray-800" onclick="closeModal()">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>

        <!-- Título del modal -->
        <h2 id="modalNombre" class="text-2xl font-bold text-gray-800 mb-6"></h2>

        <!-- Contenido del modal -->
        <div class="grid grid-cols-4 gap-4">
            <div>
                <label class="block font-medium text-gray-700 my-2">Numero de Cama</label>
                <input type="text" id="infoCama" name="infoCama" class="my-2 w-full p-2 border rounded">

                <label class="block font-medium text-gray-700 my-2">Nombres</label>
                <input type="text" id="infoNombre" name="infoNombre" class="my-2 w-full p-2 border rounded" readonly>

                <label class="block font-medium text-gray-700 my-2">Apellido Paterno</label>
                <input type="text" id="InfoApellido1" name="InfoApellido1" class="my-2 w-full p-2 border rounded" readonly>

                <label class="block font-medium text-gray-700 my-2">Apellido Materno</label>
                <input type="text" id="infoApellido2" name="infoApellido2" class="my-2 w-full p-2 border rounded" readonly>

                <label class="block font-medium text-gray-700 my-2">Fecha de Nacimiento</label>
                <input type="text" id="infoFechaNacimiento" name="infoFechaNacimiento" class="my-2 w-full p-2 border rounded" readonly>

                <label class="block font-medium text-gray-700 my-2">Observaciones Generales</label>
                <textarea type="text" id="infoObservacionesGenerales"  name="infoObservacionesGenerales" class="my-2 w-full p-2 border rounded h-48" readonly></textarea>
            </div>

            <div>
                
                <label class="block font-medium text-gray-700 my-2">Fecha de Ingreso</label>
                <input type="text" id="infoFechaIngreso" name="infoFechaIngreso" class="my-2 w-full p-2 border rounded" readonly>

                <label class="block font-medium text-gray-700 my-2">Rut</label>
                <input type="text" id="infoRut" name="infoRut" class="my-2 w-full p-2 border rounded" readonly>
                
                <label class="block font-medium text-gray-700 my-2">Telefono</label>
                <input type="text" id="infoTelefonos" name="infoTelefonos" class="my-2 w-full p-2 border rounded" readonly>

                <label class="block font-medium text-gray-700 my-2">Dirección</label>
                <input type="text" id="infoDireccion" name="infoDireccion" class="my-2 w-full p-2 border rounded" readonly>


                <label class="block font-medium text-gray-700 my-2">Correo</label>
                <input type="text" id="infoCorreo" name="infoCorreo" class="my-2 w-full p-2 border rounded" readonly>

                <label class="block font-medium text-gray-700 my-2">Observaciones Nutricionista</label>
                <textarea type="text" id="infoObservacionesNutricionista"  name="infoObservacionesNutricionista" class="my-2 w-full p-2 border rounded h-48" readonly></textarea>
            </div>

            <div>
                <label class="block font-medium text-gray-700 my-2">Fecha de Alta</label>
                <input type="text" id="infoFechaAlta" name="infoFechaAlta" class="my-2 w-full p-2 border rounded" readonly>

                <label class="block font-medium text-gray-700 my-2">Nro Cama de Alta</label>
                <input type="text" id="infoNroCama" name="infoNroCama" class="my-2 w-full p-2 border rounded" readonly>

                <label class="block font-medium text-gray-700 my-2">Servicio de Alta</label>
                <input type="text" id="infoServicioAlta" name="infoServicioAlta" class="my-2 w-full p-2 border rounded" readonly>

                <label class="block font-medium text-gray-700 my-2">Observaciones de Alta</label>
                <textarea type="text" id="infoObservacionesAlta" name="infoObservacionesAlta" class="my-2 w-full p-2 border rounded h-48" readonly></textarea>
            </div>

            <div>
                <label for="subgrupo" class="block font-medium text-gray-700 my-2">Tipo de Servicio</label>
                <select id="infoServicio" name="infoServicio" class="my-2 w-full p-2 border rounded" required>
                    <option value="" disabled selected>Seleccione</option>
                    <option value="1">Medicina</option>
                    <option value="subgrupo2">Subgrupo 2</option>
                    <option value="subgrupo3">Subgrupo 3</option>
                </select>

                <label for="subgrupo" class="block font-medium text-gray-700 my-2">Tipo de Unidad</label>
                <select id="infoUnidad" name="infoUnidad" class="my-2 w-full p-2 border rounded" required>
                    <option value="" disabled selected>Seleccione</option>
                    <option value="1">Medicina</option>
                    <option value="subgrupo2">Subgrupo 2</option>
                    <option value="subgrupo3">Subgrupo 3</option>
                </select>

                <label for="subgrupo" class="block font-medium text-gray-700 my-2">Tipo de Via</label>
                <select id="infoVia"  name="infoVia"  lass="my-2 w-full p-2 border rounded" required>
                    <option value="" disabled selected>Seleccione</option>
                    <option value="1">Oral</option>
                    <option value="subgrupo2">Subgrupo 2</option>
                    <option value="subgrupo3">Subgrupo 3</option>
                </select>

                <label for="subgrupo" class="block font-medium text-gray-700 my-2">Tipo de Regimen</label>
                <select id="infoRegimen" name="infoRegimen" class="my-2 w-full p-2 border rounded" required>
                    <option value="" disabled selected>Seleccione</option>
                    <option value="1">Regimen</option>
                    <option value="subgrupo2">Subgrupo 2</option>
                    <option value="subgrupo3">Subgrupo 3</option>
                </select>
            </div>
        </div>

        <!-- Botones -->
        <div class="flex gap-4 justify-center">
            <div class="mt-6 flex justify-end">
                <button onclick="closeModal()" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md shadow-sm hover:bg-gray-300">Cerrar</button>
            </div>
            <div class="mt-6 flex justify-end">
                <button  class="px-4 py-2 bg-blue-200 text-gray-800 rounded-md shadow-sm hover:bg-gray-300">Editar</button>
            </div>
            <div class="mt-6 flex justify-end">
                <button  class="px-4 py-2 bg-red-200 text-gray-800 rounded-md shadow-sm hover:bg-gray-300">Ver Logs</button>
            </div>
        </div>
    </div>
</div>
