<div id="patientModal" class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center hidden">
    <div class="bg-white rounded-lg shadow-xl max-w-4xl w-full p-6 relative">
        <!-- Botón para cerrar el modal -->
        <button class="absolute top-2 right-2 text-gray-500 hover:text-gray-800" onclick="closeModal()">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>

        <!-- Título del modal -->
        <h2 id="modalNombre" class="text-2xl font-bold text-gray-800 mb-6"></h2>

        <!-- Contenido del modal -->
        <div class="grid grid-cols-2 gap-4">
            <div>
                <label class="block font-medium text-gray-700">Apellido Paterno</label>
                <input type="text" id="modalApellido1" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" readonly>

                <label class="block font-medium text-gray-700 mt-4">Apellido Materno</label>
                <input type="text" id="modalApellido2" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" readonly>

                <label class="block font-medium text-gray-700 mt-4">Fecha de Nacimiento</label>
                <input type="text" id="modalFechaNacimiento" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" readonly>
            </div>

            <div>
                <label class="block font-medium text-gray-700">Teléfono</label>
                <input type="text" id="modalTelefonos" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" readonly>

                <label class="block font-medium text-gray-700 mt-4">Dirección</label>
                <input type="text" id="modalDireccion" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" readonly>

                <label class="block font-medium text-gray-700 mt-4">Rut</label>
                <input type="text" id="modalDNI" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" readonly>

                <label class="block font-medium text-gray-700 mt-4">Correo</label>
                <input type="text" id="modalCorreo" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" readonly>
            </div>
        </div>

        <!-- Botones -->
        <div class="flex gap-4 justify-center">
            <div class="mt-6 flex justify-end">
                <button onclick="closeModal()" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md shadow-sm hover:bg-gray-300">Cerrar</button>
            </div>
            <div class="mt-6 flex justify-end">
                <button  class="px-4 py-2 bg-blue-200 text-gray-800 rounded-md shadow-sm hover:bg-gray-300">Editar</button>
            </div>
            <div class="mt-6 flex justify-end">
                <button  class="px-4 py-2 bg-red-200 text-gray-800 rounded-md shadow-sm hover:bg-gray-300">Ver Logs</button>
            </div>
        </div>
    </div>
</div>
