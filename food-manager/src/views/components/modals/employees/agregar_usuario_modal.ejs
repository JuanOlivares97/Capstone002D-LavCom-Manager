<div style="z-index: 1" id="modal_crear_usuario"
    class="fixed inset-0 flex items-center justify-center hidden transition-opacity duration-300 bg-black bg-opacity-50 opacity-0">
    <div class="w-full max-w-3xl max-h-screen p-8 mt-4 overflow-y-auto bg-white rounded-lg shadow-2xl">
        <h2 class="mb-6 text-2xl font-bold text-center text-black">
            Crear Usuario
        </h2>
        <form id="formCrearEmpleado" action="/food-manager/employee/create-empleado" method="POST">
            <div class="flex mb-4">
                <div class="flex-1 mr-2">
                    <label for="rut_usuario" class="block mb-2 text-black">RUT Usuario</label>
                    <input type="text" id="rut_usuario" name="RutCompleto" class="w-full p-2 border rounded"
                        placeholder="Ingrese RUT (ej. 12345678-9)" required />
                </div>
            </div>
            <div class="flex w-full gap-2 mb-4">
                <div class="flex-1 w-full">
                    <label for="nombre" class="block mb-2 text-black">Nombre</label>
                    <input type="text" id="nombre_usuario" name="nombre_usuario" class="w-full p-2 border rounded"
                        placeholder="Ingrese Nombre" required />
                </div>
                <div>
                    <label for="apellido_paterno" class="block mb-2 text-black">Apellido Paterno</label>
                    <input type="text" id="apellido_paterno" name="apellido_paterno" class="w-full p-2 border rounded"
                        placeholder="Ingrese Apellido Paterno" required />
                </div>
                <div>
                    <label for="apellido_materno" class="block mb-2 text-black">Apellido Materno</label>
                    <input type="text" id="apellido_materno" name="apellido_materno" class="w-full p-2 border rounded"
                        placeholder="Ingrese Apellido Materno" required />
                </div>
            </div>
            <div class="flex w-full gap-2 mb-4">
                <div class="flex-1">
                    <label for="nombre" class="block mb-2 text-black">Fecha Inicio Contrato</label>
                    <input type="date" id="fechaInicioContrato" name="FechaInicioContrato"
                        class="w-full p-2 border rounded" required />
                </div>

                <div class="flex-1">
                    <label for="nombre" class="block mb-2 text-black">Fecha Termino Contrato</label>
                    <input type="date" id="fechaTerminoContrato" name="FechaTerminoContrato"
                        class="w-full p-2 border rounded" />
                </div>
            </div>
            <div class="grid grid-cols-3 gap-2 mb-4">
                <div>
                    <label class="block mb-2 text-black">Servicio</label>
                    <select class="w-full p-2 border rounded" name="tipoServicio" required>
                        <option value="">Seleccione un servicio</option>
                        <% servicios.forEach(servicio=> { %>
                            <option value="<%=servicio.IdTipoServicio%>">
                                <%=servicio.DescTipoServicio%>
                            </option>
                            <% }) %>
                    </select>
                </div>
                <div>
                    <label class="block mb-2 text-black">Tipo Contrato</label>
                    <select class="w-full p-2 border rounded" name="tipoContrato" required>
                        <option value="">Seleccione un tipo de contrato</option>
                        <% contrato.forEach(contratos=> { %>
                            <option value="<%=contratos.IdTipoContrato%>">
                                <%=contratos.TipoContrato%>
                            </option>
                            <% }) %>
                    </select>
                </div>
                <div>
                    <label class="block mb-2 text-black">Unidad SIGCOM</label>
                    <select class="w-full p-2 border rounded" name="tipoUnidad" required>
                        <option value="">Seleccione una unidad</option>
                        <% unidades.forEach(unidad=> { %>
                            <option value="<%=unidad.IdTipoUnidad%>">
                                <%=unidad.DescTipoUnidad%>
                            </option>
                            <% }) %>
                    </select>
                </div>
            </div>
            <div class="grid grid-cols-2 gap-2 mb-4">
                <div>
                    <label class="block mb-2 text-black">Estamento</label>
                    <select class="w-full p-2 border rounded" name="tipoEstamento" required>
                        <option value="">Seleccione un estamento</option>
                        <% estamentos.forEach(estamento=> { %>
                            <option value="<%=estamento.IdTipoEstamento%>">
                                <%=estamento.DescTipoEstamento%>
                            </option>
                            <% }) %>
                    </select>
                </div>
                <div>
                    <label class="block mb-2 text-black">Tipo Usuario</label>
                    <select class="w-full p-2 border rounded" name="tipoFuncionario" required>
                        <option value="">Seleccione un tipo de usuario</option>
                        <% tipoFuncionario.forEach(tipo=> { %>
                            <option value="<%=tipo.IdTipoFuncionario%>">
                                <%=tipo.TipoPerfil%>
                            </option>
                            <% }) %>
                    </select>
                </div>
            </div>
            <!-- <div class="mb-4">
                <label for="correo" class="block mb-2 text-black">Correo</label>
                <input type="email" id="correo" name="correo" class="w-full p-2 border rounded"
                    placeholder="Ingrese Username" required>
            </div>
            <div class="mb-4">
                <label for="telefono" class="block mb-2 text-black">Telefono</label>
                <input type="number" id="telefono" name="telefono" class="w-full p-2 border rounded"
                    placeholder="Ingrese Numero Telefonico" required>
            </div>
            <div class="mb-4">
                <label for="direccion" class="block mb-2 text-black">Direccion</label>
                <input type="text" id="direccion" name="direccion" class="w-full p-2 border rounded"
                    placeholder="Ingrese Direccion" required>
            </div> -->
            <button type="submit" class="w-full p-2 text-white bg-green-500 rounded hover:bg-green-400">
                Crear Usuario
            </button>
        </form>
        <div class="mt-4 text-center">
            <button id="closeModalAddUser" class="w-full p-2 text-white bg-red-500 rounded hover:bg-red-400">
                Cancelar
            </button>
        </div>
    </div>
</div>