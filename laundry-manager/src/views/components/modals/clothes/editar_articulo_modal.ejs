<div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden opacity-0 transition-opacity duration-300" id="editar_articulo_modal">
    <div class="bg-white rounded-lg shadow-lg p-8 max-w-sm w-full transform scale-95 transition-transform duration-300">
        <h2 class="text-2xl font-bold mb-6 text-center">Editar Artículo</h2>
        <form>
            <input name="id_articulo" type="text" hidden value="">
            <input name="rowIndex" type="text" hidden value="">
            <div class="mb-4">
                <label for="nombre" class="block text-black-700 mb-2">Nombre</label>
                <input type="text" name="nombre" class="w-full p-2 border rounded" placeholder="Ingrese el nombre del artículo" required>
            </div>
            <div class="mb-4">
                <label for="stock" class="block text-black-700 mb-2">Stock</label>
                <input type="number" name="stock" class="w-full p-2 border rounded" placeholder="Ingrese la cantidad en stock" required>
            </div>
            <div class="mb-4">
                <label for="subgrupo" class="block text-black-700 mb-2">Subgrupo</label>
                <select name="subgrupo" class="w-full p-2 border rounded" required>
                    <option value="" disabled selected>Seleccione un subgrupo</option>
                    <option value="1">Ropa Cama</option>
                    <option value="2">Ropa Pabellon</option>
                    <option value="3">Otro</option>
                </select>
            </div>
            <div class="flex justify-between mt-6">
                <button type="button" class="bg-red-500 text-white p-2 rounded hover:bg-red-800" id="closeModalEditarArticulo">Cancelar</button>
                <button type="submit" class="bg-green-500 text-white p-2 rounded hover:bg-green-800">Guardar cambios</button>
            </div>
        </form>
    </div>
</div>